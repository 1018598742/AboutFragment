<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kedaxunfei.fta.com.testfragment.MainActivity">

    <TextView
        android:id="@+id/hello_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/main_clear"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/main_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="清空栈"
        app:layout_constraintLeft_toRightOf="@id/hello_tv"
        app:layout_constraintRight_toLeftOf="@+id/main_count"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/main_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="数量"
        app:layout_constraintLeft_toRightOf="@id/main_clear"
        app:layout_constraintRight_toLeftOf="@+id/add_fragment"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/add_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加页面"
        app:layout_constraintLeft_toRightOf="@id/main_count"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/content_fl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hello_tv" />

</android.support.constraint.ConstraintLayout>
